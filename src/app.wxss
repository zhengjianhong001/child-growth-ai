/**app.wxss**/
@import './style/weui.wxss';

page {
  --primary-color: #1296db;
  --secondary-color: #4caf50;
  --background-color: #f8f8f8;
  --text-color: #333333;
  --border-color: #e5e5e5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: var(--background-color);
}

.card {
  width: 90%;
  margin: 20rpx auto;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.primary-button {
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
}

.secondary-button {
  background-color: var(--secondary-color);
  color: #ffffff;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
}

.text-button {
  background: none;
  color: var(--primary-color);
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
}

.divider {
  width: 100%;
  height: 2rpx;
  background-color: var(--border-color);
  margin: 20rpx 0;
} 